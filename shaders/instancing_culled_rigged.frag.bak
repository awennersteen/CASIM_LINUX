
#define NUM_LIGHTS		2
#define USING_IDS
#define BlendOverlayf(base, blend) 		(base < 0.5 ? (2.0 * base * blend) : (1.0 - 2.0 * (1.0 - base) * (1.0 - blend)))
#define Blend(base, blend, funcf) 		vec3(funcf(base.r, blend.r), funcf(base.g, blend.g), funcf(base.b, blend.b))
#define BlendOverlay(base, blend) 		Blend(base, blend, BlendOverlayf)

varying vec3 lightVec[NUM_LIGHTS];
varying vec3 N;
varying vec3 E;
varying vec3 ti;
varying vec4 normalColor;

uniform sampler2D diffuseTexture1;		// skin
uniform sampler2D hair;					// hair texture		
uniform sampler2D _cap_;				// cap texture
uniform sampler2D torso;				// torso clothes
uniform sampler2D legs;					// legs clothes

uniform sampler2DRect color_table;
uniform sampler2DRect patterns_table;

vec3 RGBToHSL(vec3 color);
vec3 HSLToRGB(vec3 hsl);


vec4 torso_coordinate ( sampler2D torso, sampler2D wrinkles, sampler2DRect color_table, sampler2DRect patterns_table, vec2 st )
{
	vec4 color = vec4 ( 0.0, 0.0, 0.0, 1.0 );
	vec4 foldings = texture2D ( wrinkles, st );
	foldings.rgb *= 0.7;				// brightness adjustment
	
	float pattern_id = texture2D ( torso, st ).r;
	color.a = 1.0 - pattern_id;			// setting alpha value to final composite
	pattern_id *= 255.0;				// expanding the range from [0,1] -> [0, 255]
	
	vec4 outfitCoordinate[3];
	outfitCoordinate[0] = texture2DRect (color_table, vec2(1.0, 37.0)) * 255.0;	// expanding the range from [0,1] -> [0, 255]
	outfitCoordinate[1] = texture2DRect (color_table, vec2(1.0, 38.0)) * 255.0;	// expanding the range from [0,1] -> [0, 255]
	outfitCoordinate[2] = texture2DRect (color_table, vec2(1.0, 39.0)) * 255.0;	// expanding the range from [0,1] -> [0, 255]

	vec4 colorCoordinate0[4];
	colorCoordinate0[0] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[0].r));
	colorCoordinate0[1] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[0].g));
	colorCoordinate0[2] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[0].b));
	colorCoordinate0[3] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[0].a));

	vec4 colorCoordinate1[4];
	colorCoordinate1[0] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[1].r));
	colorCoordinate1[1] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[1].g));
	colorCoordinate1[2] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[1].b));
	colorCoordinate1[3] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[1].a));

	vec4 colorCoordinate2[4];
	colorCoordinate2[0] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[2].r));
	colorCoordinate2[1] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[2].g));
	colorCoordinate2[2] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[2].b));
	colorCoordinate2[3] = texture2DRect (color_table, vec2(0.0, outfitCoordinate[2].a));

	if ( pattern_id == 1.0 )
	{
		color = colorCoordinate0[0];
		color.a = 1.0;
	}
	if ( pattern_id == 2.0 )
	{
		color = colorCoordinate0[1];
		color.a = 1.0;
	}
	if ( pattern_id == 3.0 )
	{
		color = colorCoordinate0[2];
		color.a = 1.0;
	}
	if ( pattern_id == 4.0 )
	{
		color = colorCoordinate0[3];
		color.a = 1.0;
	}

	if ( pattern_id == 5.0 )
	{
		color = colorCoordinate1[0];
		color.a = 1.0;
	}
	if ( pattern_id == 6.0 )
	{
		color = colorCoordinate1[1];
		color.a = 1.0;
	}
	if ( pattern_id == 7.0 )
	{
		color = colorCoordinate1[2];
		color.a = 1.0;
	}
	if ( pattern_id == 8.0 )
	{
		color = colorCoordinate1[3];
		color.a = 1.0;
	}

	if ( pattern_id == 9.0 )
	{
		color = colorCoordinate2[0];
		color.a = 1.0;
	}
	if ( pattern_id == 10.0 )
	{
		color = colorCoordinate2[1];
		color.a = 1.0;
	}
	if ( pattern_id == 11.0 )
	{
		color = colorCoordinate2[2];
		color.a = 1.0;
	}

/*
	color.rgb =	colorCoordinate1[0].rgb * step (5.0, pattern_id) + colorCoordinate1[1].rgb * step (6.0, pattern_id) + 
				colorCoordinate1[2].rgb * step (7.0, pattern_id) + colorCoordinate1[3].rgb * step (8.0, pattern_id);

	color.rgb = min (color.rgb, 1.0); // avoiding color saturation
	*/
/*
	color.rgb += colorCoordinate1[0].rgb * step (5.0, pattern_id) + colorCoordinate1[1].rgb * step (6.0, pattern_id) + 
				 colorCoordinate1[2].rgb * step (7.0, pattern_id) + colorCoordinate1[3].rgb * step (8.0, pattern_id); 




				//colorCoordinate2[0].rgb * step (9.0, pattern_id) + colorCoordinate2[1].rgb * step (10.0, pattern_id) + 
				//colorCoordinate2[2].rgb * step (11.0, pattern_id)
				
	
	//color.rgb = min (color.rgb, 1.0); // avoiding color saturation
*/
	color.rgb = BlendOverlay(foldings, color);
	
	return color; 
}

vec3 modulation (vec3 color, vec3 hsl)
{
	color = RGBToHSL(color);
	color += hsl; 
	return HSLToRGB (color);
}

void main( void )
{
	
#ifdef USING_IDS
	vec2 uv					= gl_TexCoord[0].st*0.2 + 0.2*ti.st;
	vec4 diffuseMaterial	= texture2D( diffuseTexture1,	uv );
	vec4 hairMaterial		= texture2D( hair,				uv );
	vec4 capMaterial		= texture2D( _cap_,				uv );
	vec4 torsoMaterial		= torso_coordinate ( torso,	_cap_, color_table, patterns_table, gl_TexCoord[0].st );
	vec4 legsMaterial		= texture2D( legs,				uv );



	diffuseMaterial.rgb	= modulation ( diffuseMaterial.rgb, vec3 ( -(ti.s * 3.0) / 180.0 * 0.5 , (ti.s * 3.0) / 180.0 * 0.5, 0.0 ) ); 
